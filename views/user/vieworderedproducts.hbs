
  <section>
    <div class="container mt-4">
      <div class="row">
        {{#each products}}
        <div class="col-md-3">
          <div class="card" style="width: 18rem;height:27rem" align="center">
            <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" style="width:15rem ;height:15rem" >
            <div class="card-body">
              <h5 class="card-title">{{this.product.name}}</h5>
              <p class="card-text">Rs.{{this.product.price}}</p>
              <p class="card-text">{{this.proudct.description}}</p>
              <p class="card-text">Quantity:{{this.quantity}}</p>
            </div>
          </div>
        </div>
        {{/each}}
        
        
       
        